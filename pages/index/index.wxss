/**index.wxss**/
.search-container {
    background-color: white;
  }
  
  .search {
    position: relative;
    width: 100vw;
    height: 120rpx;
    display: flex;
    padding-top: 40rpx;
    box-sizing: border-box;
    padding-left: 26rpx;
    background-color: white;
  }
  
  .search input {
    display: block;
    box-sizing: border-box;
    background: #F7F8FA;
    height: 62rpx;
    border-radius: 20rpx;
    padding-left: 20rpx;
    line-height: 62rpx;
    font-size: 12px;
  }
  
  .search-title {
    left: 0;
    font-weight: bold;
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 60rpx;
    line-height: 60rpx;
    margin-right: 40rpx;
  }
  
  .search-placeholder {
    font-size: 14px;
    color: #A9A6A6;
    line-height: 62rpx;
  }
  
  .scan_image {
    width: 25rpx;
    height: 25rpx;
    position: absolute;
    top: 14rpx;
    right: 37%;
    z-index: 99;
  }

  .swiper-container{
    width: 750rpx;
    height: 375rpx;
    position: relative;
    z-index: 1;
}
.swiper-container .swiper1,.swiper-container .swiper1 image{
    width: 750rpx;
    height: 375rpx;
}
