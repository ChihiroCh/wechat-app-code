.goodsDynamic{
    position: absolute;
    bottom: 46rpx;
    left: 24rpx;
    width: 668rpx;
    color: #fff;
    font-size: 24rpx;
}
.swiper2{
    width: 100%;
    height: 64rpx;
}
.goodsDynamic-item{
    display: inline-flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 32rpx;
    padding: 8rpx 16rpx;
}
.goodsDynamic-item image{
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    flex-shrink: 0;
}
.goodsDynamic-item text{
    margin-left: 8rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.category-container{
    padding: 0 0 10px 0;
    margin-top: 16rpx;
    position: relative;
    background-color: white;
}
.category-box {
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
    width: 700rpx;
    margin-left: 25rpx;
    border-radius: 10px;
    padding: 20rpx 0;
    position: inherit;
}
.category-list {
    width: 140rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.category-column {
    width: 100%;
    margin-top: 20rpx;
    overflow: hidden;
}
.category-imgbox {
    width: 100rpx;
    height: 100rpx;
}
.category-title {
    font-size: 24rpx;
    text-align: center;
}

